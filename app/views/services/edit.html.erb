<div class="main services-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/admin/services/#{@service.id}", :method => :put) do %>
      <div class="form">
        <div class="form-body">
          <!-- バリデーションエラー -->
          <% @service.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <textarea name="wifi_name"><%= @service.wifi_name %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>