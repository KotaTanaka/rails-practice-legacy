<!DOCTYPE html>
<html>
  <head>
    <title>WifiMapApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("Find WiFi", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("Find WiFiとは", "/about") %>
        </li>
        <li>
          <%= link_to("店舗一覧", "/shops") %>
        </li>
        <li>
          <%= link_to("店舗新規登録", "/shops/new") %>
        </li>
        <li>
          <%= link_to("レビュー一覧", "/reviews") %>
        </li>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
